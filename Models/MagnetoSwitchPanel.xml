<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
  <name>MagnetoSwitch</name>
  <background>Aircraft/ZivkoEdge/Models/transparent.rgb</background>
  <w>40</w>
  <h>40</h>
  <instruments>
    <instrument>
      <name>panel hotspots</name>
      <x>20</x>
      <y>20</y>
      <w>40</w>
      <h>40</h>
      <w-base>40</w-base>
      <h-base>40</h-base>

      <actions>

        <action>
          <condition>
            <less-than>
              <property>controls/engines/engine[0]/magnetos</property>
              <value>3</value>
            </less-than>
          </condition>
          <name>IncreaseMagnetos</name>
          <button>0</button>
          <x>0</x>
          <y>-20</y>
          <w>20</w>
          <h>40</h>
          <repeatable type="bool">false</repeatable>
          <binding>
            <command>property-adjust</command>
            <property>controls/engines/engine[0]/magnetos</property>
            <step>1</step>
            <min>0</min>
            <max>3</max>
            <wrap>false</wrap>
          </binding>
        </action>

        <action>
          <condition>
            <equals>
              <property>controls/engines/engine[0]/magnetos</property>
              <value>3</value>
            </equals>
          </condition>
          <name>EngageStarter</name>
          <button>0</button>
          <x>0</x>
          <y>-20</y>
          <w>20</w>
          <h>40</h>
          <repeatable type="bool">false</repeatable>
          <binding>
            <command>property-assign</command>
            <property>controls/engines/engine[0]/starter</property>
            <value type="bool">true</value>
          </binding>
          <mod-up>
            <binding>
              <command>property-assign</command>
              <property>controls/engines/engine[0]/starter</property>
              <value type="bool">false</value>
            </binding>
          </mod-up>
        </action>

        <action>
          <name>DecreaseMagnetos</name>
          <button>0</button>
          <x>-20</x>
          <y>-20</y>
          <w>20</w>
          <h>40</h>
          <repeatable type="bool">false</repeatable>
          <binding>
            <command>property-adjust</command>
            <property>controls/engines/engine[0]/magnetos</property>
            <step>-1</step>
            <min>0</min>
            <max>3</max>
            <wrap>false</wrap>
          </binding>
        </action>

      </actions>
    </instrument>
  </instruments>
</PropertyList>
