<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
  <name>EDM700</name>
  <background>Aircraft/ZivkoEdge/Models/transparent.rgb</background>
  <w>600</w>
  <h>600</h>
  <instruments>
    <instrument>
      <name>panel hotspots</name>
      <x>300</x>
      <y>300</y>
      <w>600</w>
      <h>600</h>
      <w-base>600</w-base>
      <h-base>600</h-base>

      <actions>

        <!-- STEP Button -->
        <action>
          <name>StepButton</name>
          <button>0</button>
          <x>-240</x>
          <y>-330</y>
          <w>100</w>
          <h>100</h>
          <repeatable type="bool">false</repeatable>
          <binding>
            <command>property-assign</command>
            <property>instrumentation/edm700/step-button</property>
            <value>true</value>
          </binding>
          <mod-up>
            <binding>
              <command>property-assign</command>
              <property>instrumentation/edm700/step-button</property>
              <value>false</value>
            </binding>
          </mod-up>
        </action>

        <!-- FL Button -->
        <action>
          <name>LFButton</name>
          <button>0</button>
          <x>140</x>
          <y>-330</y>
          <w>100</w>
          <h>100</h>
          <repeatable type="bool">false</repeatable>
          <binding>
            <command>property-assign</command>
            <property>instrumentation/edm700/lf-button</property>
            <value>true</value>
          </binding>
          <mod-up>
            <binding>
              <command>property-assign</command>
              <property>instrumentation/edm700/lf-button</property>
              <value>false</value>
            </binding>
          </mod-up>
        </action>

      </actions>
    </instrument>
  </instruments>
</PropertyList>
