<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>

  <path>ZivkoEdge540.ac</path>

  <model>
    <path>Aircraft/ZivkoEdge/Models/Edge540Panel.xml</path>
    <name>HiResInstrumentPanel</name>
    <offsets>
      <x-m>0.86</x-m>
      <y-m>0.0</y-m>
      <z-m>1.42</z-m>
    </offsets>
  </model>

  <!-- Animations -->
  <animation>
    <type>select</type>
    <object-name>Dashboard</object-name>
  </animation>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>8000</max-m>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Pilot</object-name>
    <condition>
      <property>sim/current-view/view-number</property>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Helmet</object-name>
    <property>sim/model/pilot-view-heading/position-norm</property>
    <factor>60</factor>
    <center>
     <x-m>1.40627</x-m>
     <y-m>0</y-m>
     <z-m>1.60476</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>1.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Helmet</object-name>
    <property>sim/model/pilot-view-pitch-norm</property>
    <factor>15</factor>
    <center>
     <x-m>1.40627</x-m>
     <y-m>0</y-m>
     <z-m>1.60476</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Stick</object-name>
    <property>controls/flight/elevator</property>
    <factor>-11.25</factor>
    <center>
     <x-m>0.988169</x-m>
     <y-m>0</y-m>
     <z-m>0.770673</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Stick</object-name>
    <property>controls/flight/aileron</property>
    <factor>-11.25</factor>
    <center>
     <x-m>0.988169</x-m>
     <y-m>0</y-m>
     <z-m>0.770673</z-m>
    </center>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Rudder</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>45.0</factor>
    <axis>
      <x1-m>3.998</x1-m>
      <y1-m>0</y1-m>
      <z1-m>0.966</z1-m>
      <x2-m>3.996</x2-m>
      <y2-m>0</y2-m>
      <z2-m>2.301</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Elevator.Left</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>-19.5</factor>
    <axis>
      <x1-m>3.816</x1-m>
      <y1-m>-0.07</y1-m>
      <z1-m>1.424</z1-m>
      <x2-m>3.811</x2-m>
      <y2-m>-1.13</y2-m>
      <z2-m>1.424</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Elevator.Right</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>19.5</factor>
    <axis>
      <x1-m>3.816</x1-m>
      <y1-m>0.07</y1-m>
      <z1-m>1.424</z1-m>
      <x2-m>3.811</x2-m>
      <y2-m>1.13</y2-m>
      <z2-m>1.424</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Aileron.Left</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>-22.5</factor>
    <axis>
      <x1-m>1.23895</x1-m>
      <y1-m>-1.21416</y1-m>
      <z1-m>1.19566</z1-m>
      <x2-m>0.750615</x2-m>
      <y2-m>-3.56963</y2-m>
      <z2-m>1.20962</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Aileron.Right</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>-22.5</factor>
    <axis>
      <x1-m>1.23895</x1-m>
      <y1-m>1.21416</y1-m>
      <z1-m>1.19566</z1-m>
      <x2-m>0.750615</x2-m>
      <y2-m>3.56963</y2-m>
      <z2-m>1.20962</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Gear.Left</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <factor>-30</factor>
    <axis>
      <x1-m>-0.04132</x1-m>
      <y1-m>-0.38505</y1-m>
      <z1-m>0.671508</z1-m>
      <x2-m>0.09011</x2-m>
      <y2-m>-0.38505</y2-m>
      <z2-m>0.671508</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Gear.Right</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <factor>30</factor>
    <axis>
      <x1-m>-0.04132</x1-m>
      <y1-m>0.38505</y1-m>
      <z1-m>0.671508</z1-m>
      <x2-m>0.09011</x2-m>
      <y2-m>0.38505</y2-m>
      <z2-m>0.671508</z2-m>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>Propeller</object-name>
    <object-name>Spinner</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor>-1</factor>
    <center>
     <x-m>-1.07</x-m>
     <y-m>0</y-m>
     <z-m>1.18805</z-m>
    </center>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Propeller</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>350</value>
      </less-than>
    </condition>
  </animation>

  <!--particle system-->
  <particlesystem>
    <name>smoke-p</name>
    <texture>smoke.rgb</texture>
    <emissive>false</emissive>
    <lighting>false</lighting>

    <offsets>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>

    <condition>
      <property>controls/electric/smoke-switch</property>
    </condition>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <theta-min-deg>88</theta-min-deg>
      <theta-max-deg>92</theta-max-deg>
      <phi-min-deg>-1.5</phi-min-deg>
      <phi-max-deg>1.5</phi-max-deg>
      <speed-mps>
        <value>0</value>
        <spread>0</spread>
      </speed-mps>
      <rotation-speed>
        <x-max-deg-sec>-35.7</x-max-deg-sec>
        <x-min-deg-sec>-13.9</x-min-deg-sec>
        <y-max-deg-sec>0</y-max-deg-sec>
        <y-min-deg-sec>0</y-min-deg-sec>
        <z-max-deg-sec>0</z-max-deg-sec>
        <z-min-deg-sec>0</z-min-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <property>velocities/airspeed-kt</property>
        <factor>1</factor>
        <offset>0</offset>
        <spread>1</spread>
      </particles-per-sec>
    </counter>

<!--
    <align>billboard</align>
-->

    <particle>
      <start>
        <color>
          <red>
            <value>0.8</value>
          </red>
          <green>
            <value>0.0</value>
          </green>
          <blue>
            <value>0.0</value>
          </blue>
          <alpha>
            <value>0.3</value>
          </alpha>
        </color>
        <size>
          <value>0.2</value>
        </size>
      </start>

      <end>
        <color>
          <red>
            <value>0.8</value>
          </red>
          <green>
            <value>0.8</value>
          </green>
          <blue>
            <value>0.8</value>
          </blue>
          <alpha>
            <value>0.003</value>
          </alpha>
        </color>
        <size>
          <value>15</value>
        </size>
      </end>
      <life-sec>
        <value>30.0</value>
      </life-sec>
      <mass-kg>0.1</mass-kg>
      <radius-m>0.1</radius-m>
    </particle>

    <program>
      <fluid>air</fluid>
      <gravity>true</gravity>
      <wind>true</wind>
    </program>

  </particlesystem>
</PropertyList>
